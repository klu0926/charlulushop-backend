{
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": false,
    "arrowParens": "avoid",
    "proseWrap": "preserve",
    "overrides": [
      {
        "files": ["*.hbs", "*.handlebars"],
        "options": {
          "singleQuote": false,
          "parser": "handlebars"
        }
      }
    ]
  }
}
