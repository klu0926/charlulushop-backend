<div class="page">
<div class="editPostPage w-100">
  {{> backButton}}

<!---->
<div class="editPostPage-top-container">

    <!--title-->
  <div class="post-section title-section">
   <p class="title">標題</p>
    <div id="post-title" class="post-block title-block" contenteditable="true">{{post.title}}</div>
  </div>

  <!--display-->
  <div class="post-section">
   <p class="title">貼文封面</p>
  <div id="cover-display" class="post-cover-display" style="background-image: url({{post.cover}});">
    <div class="editPost-cover-display-title">更換封面</div>
    <input id="imageInput" class="d-none" type="file" name="picture" required />
  </div>
  </div>

  <!--desc-->
  <div class="post-section">
  <p class="title">介紹</p>
  <div id="post-description" class="post-block des-block" contenteditable="true">{{post.description}}</div>
  </div>

</div>
  <!--main content-->
 <div class="post-section">
  <p class="title">內文</p>
  <div id="post-content" class="post-block content-block">
  </div>
</div>
<div class="post-buttons-div">
  <select name="status" id="status-select">
    <option value="創作中"{{#if (isSame post.status '創作中')}}selected{{/if}}>狀態：創作中</option>
    <option value="公開"{{#if (isSame post.status '公開')}}selected{{/if}}>狀態：公開</option>
  </select>
  <button id="save" type="button" data-id="{{post.id}}">儲存</button>
</div>
</div>
</div>

<script type="module" src="/js/editPostPage.js"></script>
