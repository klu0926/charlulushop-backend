<div class="page">
  <div class="loginPage">
    <h1 style="text-align: center;">登入</h1>
    <form id="loginForm" class="loginForm" action="/users/login" method="POST">
    <!--名稱-->
      <div class="inputGroup-row">
     <div class="inputGroup-input-container">
      <label class="inputGroup-label" for="name">名稱：</label>
      <input class="inputGroup-input" id="name" name="name" type="text" placeholder="..." required autocomplete="username"/>
      </div>
    </div>
          <p id="name-error" class="form-error">需要填寫名稱</p>
    <!--密碼-->
    <div class="inputGroup-row">
      <div class="inputGroup-input-container">
      <label class="inputGroup-label" for="password">密碼：</label>
      <input class="inputGroup-input" id="password" name="password" type="password" placeholder="..." required autocomplete="current-password" />
      </div>
    </div>
    <p id="password-error" class="form-error">需要填寫密碼</p>
      <div style="display: flex; justify-content: center">
      <button id="submit" class="w-80" type="button">登入</button>
      </div>
    </form>
    {{> errorMessage title='登入失敗'}}
  </div>
<div>

  <script type="module" src="/js/loginPage.js"></script>